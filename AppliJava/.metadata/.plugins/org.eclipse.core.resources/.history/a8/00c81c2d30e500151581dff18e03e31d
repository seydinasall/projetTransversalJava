import java.awt.BorderLayout;
import java.awt.Color;

import javax.swing.JFrame;
import javax.swing.JLayeredPane;
import javax.swing.JPanel;

public class MainWindow extends JFrame {
	
	private JFrame frame;
	private JLayeredPane lpane; 
	
	public MainWindow(){
		frame = new JFrame();
		frame.setTitle("Twitter - Java");
	    frame.setSize(600, 450);
	    frame.setLocationRelativeTo(null);
	    lpane = new JLayeredPane();
	    lpane.setBounds(0, 0, 600, 400);
	 
	    JPanel panelFond = new JPanel();
	    JPanel panelHead = new JPanel();
	    
	    panelFond.setBackground(Color.lightGray); 
	    panelHead.setBackground(Color.GREEN);
	    
        panelHead.setBounds(200, 100, 100, 100);
	    lpane.add(panelFond, new Integer(0), 0);
        lpane.add(panelHead, new Integer(1), 0);
        frame.pack();
	    
	    frame.setContentPane(panelFond);
	    
	    frame.setVisible(true);

	}
}
