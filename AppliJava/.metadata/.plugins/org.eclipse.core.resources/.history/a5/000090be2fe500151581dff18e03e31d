import java.awt.BorderLayout;
import java.awt.Color;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class MainWindow extends JFrame {
	
	private JFrame frame;
	
	public MainWindow(){
		this.setTitle("Twitter - Java");
	    this.setSize(600, 450);
	    this.setLocationRelativeTo(null);               
	 
	    JPanel panelFond = new JPanel();
	    JPanel panelHead = new JPanel();
	    panelFond.setBackground(Color.lightGray); 
	    panelHead.setBackground(Color.GREEN);
	    panelHead.setBounds(0, 0, 100, 100);
	    panelHead.setOpaque(true);
	    this.setContentPane(panelFond);               
	    this.setVisible(true);

	}
}
